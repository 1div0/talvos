# Check that control flow is handled correctly for OpBranchConditional.

MODULE simple-branch.spvasm
ENTRY foo

ALLOCATE input  BUFFER 16 RANGE INT32 40 1
ALLOCATE output BUFFER 16 FILL  INT32 0

DESCRIPTOR_SET 0 0 input
DESCRIPTOR_SET 0 1 output

DISPATCH 4 1 1

DUMP INT32 output

# CHECK: Buffer 'output' (16 bytes):
# CHECK:   output[0] = 0
# CHECK:   output[1] = 0
# CHECK:   output[2] = 1
# CHECK:   output[3] = 0
